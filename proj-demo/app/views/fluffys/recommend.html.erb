<h2>Recommended events</h2>

<table class="table table-striped col-md-12" id="events">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Interests</th>
      <th>Budget</th>
      <th>Frequency of entertainment</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |movie| %>
      <tr>
        <td>
          <%= movie.name %>
        </td>
        <td>
          <%= movie.location %>
        </td>
        <td>
          <%= movie.interests %>
        </td>
        <td>
            <%= movie.budget %>
        </td>
        <td>
            <%= movie.frequency_of_entertainment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<h5><%= @result %></h5>
<%= link_to 'Return to home', fluffys_path, :class => 'btn btn-secondary' %>

<%= submit_tag 'Recommend to login', :class => 'btn btn-primary' %>
